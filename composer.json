{
    "name": "grifart/enum",
    "description": "Provides bullet proof enums with behaviours.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jan KuchaÅ™",
            "email": "honza.kuchar@grifart.cz"
        }
    ],

    "scripts": {
        "verify": [
            "@phpstan",
            "@test"
        ],
        "phpstan": "vendor/bin/phpstan analyze -l 7 src tests --no-interaction --ansi --no-progress",
        "test": "vendor/bin/tester tests --colors 1"
    },

    "require": {
        "php": ">=7.1.0"
    },
    "autoload": {
        "psr-4": {
            "Grifart\\Enum\\": "src"
        },
        "classmap": [
            "src/exceptions.php"
        ]
    },

    "require-dev": {
        "nette/tester": "^1.7.0",
        "phpstan/phpstan": "^0.8.5"
    },
    "autoload-dev": {
        "files": [
            "src/exceptions.php"
        ]
    }
    
}
